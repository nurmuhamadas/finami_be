{
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "esm": true
  },
  "lib": ["es2015"],
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2021",
    "sourceMap": true,
    "module": "ES2022",
    "baseUrl": "./src",
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "./src/**/*.test.ts"]
}
